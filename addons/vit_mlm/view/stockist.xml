<openerp>
<data>
	<record id="view_stockist_tree" model="ir.ui.view">
	    <field name="name">mlm_stockist_tree</field>
	    <field name="model">stock.warehouse</field>
	    <field name="arch" type="xml">
	    	<tree string="list stockist">
				<field name='name' />
				<field name='partner_id' />
				<field name='phone' />
				<field name='bbm' />
				<field name='street' />
				<field name='city' />
				<field name='state_id' />
			</tree>    
	    </field>
	</record>



	<!-- ini definisi search stockist -->
	<record id="view_stockist_filter" model="ir.ui.view">
	    <field name="name">stockist.filter</field>
	    <field name="model">stock.warehouse</field>
	    <field name="arch" type="xml">
	        <search string="Search Stockist">
	
	            <!--filter icon="terp-mail-message-new" 
	                string="Bonus Sponsor" 
	            	name="sponsor" domain="[('bonus_id','=','Sponsor')]"/-->

	            <separator/>
	            
	            <field name="name"/>
	            <field name="partner_id"/>
	            <field name="city"/>
	            <field name="state_id"/>
	            
	            <group expand="1" string="Group By...">

	                <filter string="State" icon="terp-personal" 
	                    domain="[]" name="group_by_state_id"
	                	context="{'group_by':'state_id'}"/>

	                <filter string="City" icon="terp-personal" 
	                    domain="[]" name="group_by_city"
	                	context="{'group_by':'city'}"/>

	            </group>                                        
	
	        </search>
	    </field>
	</record>


	<!-- tambah paket id di SO -->
       <record id="view_sale_order_paket" model="ir.ui.view">
            <field name="name">sale_order_paket</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                	<field name="paket_id"/>
                </field>
            </field>
        </record>        

	<!-- tambah paket id di invoice -->
       <record id="view_invoice_paket" model="ir.ui.view">
            <field name="name">invoice_paket</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                	<field name="paket_id"/>
                </field>
            </field>
        </record> 

</data>
</openerp>