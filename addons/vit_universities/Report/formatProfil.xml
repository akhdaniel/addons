<header>
    <pageTemplate>
        <frame id="first" x1="1.3cm" y1="3.0cm" height="23.0cm" width="19.0cm"/>
         <stylesheet>
            <paraStyle name="main_footer"  fontName="DejaVu Sans" fontSize="8.0" alignment="CENTER"/>
            <paraStyle name="main_header"  fontName="DejaVu Sans" fontSize="8.0" leading="10" alignment="LEFT" spaceBefore="0.0" spaceAfter="0.0"/>            
         </stylesheet>
        <pageGraphics>
            <!-- You Logo - Change X,Y,Width and Height -->
            <image x="1.3cm" y="25.9cm" height="20.0" >[[ company.logo or removeParentNode('image') ]]</image>
            <image x="16.7cm" y="22.6cm" height="80.0" >[[ company.logo or removeParentNode('image') ]]</image>
            <setFont name="DejaVu Sans" size="8"/>
            <fill color="black"/>
            <stroke color="black"/>

            <!-- page header -->
            <lines>1.3cm 25.7cm 20cm 25.7cm</lines>
            <drawRightString x="20cm" y="25.8cm">[[ company.rml_header1 ]]</drawRightString>
            <drawString x="1.3cm" y="25.3cm">[[ company.partner_id.name ]]</drawString>
            <place x="1.3cm" y="23.3cm" height="1.8cm" width="15.0cm">
                <para style="main_header">[[ display_address(company.partner_id) or  '' ]]</para>
            </place>
            <drawString x="1.3cm" y="23.0cm">Phone:</drawString>
            <drawRightString x="7cm" y="23.0cm">[[ company.partner_id.phone or '' ]]</drawRightString>
            <drawString x="1.3cm" y="22.6cm">Mail:</drawString>
            <drawRightString x="7cm" y="22.6cm">[[ company.partner_id.email or '' ]]</drawRightString>
            <lines>1.3cm 22.5cm 7cm 22.5cm</lines>

            <!-- left margin -->
            <rotate degrees="90"/>
            <fill color="grey"/>
            <drawString x="2.65cm" y="-0.4cm">generated by OpenERP.com</drawString>
            <fill color="black"/>
            <rotate degrees="-90"/>

            <!--page bottom-->
            <lines>1.2cm 2.65cm 19.9cm 2.65cm</lines>
            <place x="1.3cm" y="0cm" height="2.55cm" width="19.0cm">
                <para style="main_footer">[[ company.rml_footer ]]</para>
                <para style="main_footer">Contact : [[ user.name ]] - Page: <pageNumber/></para>
            </place>
        </pageGraphics>
    </pageTemplate>
</header>
