<openerp>
	<data>
		<!-- ini definisi tree session -->
		<record id="session_list" model="ir.ui.view">
			<field name="name">session_list</field>
			<field name="model">academic.session</field>
			
			<field name="arch" type="xml">
				<tree string="Daftar Sessions" 
					 colors="red:taken_seats &gt; 50; green:taken_seats &lt; 20">
					<field name="name"/>         
					<field name="course_id"/>    
					<field name="instructor_id"/>
					<field name="start_date"/>   
					<field name="duration"/>     
					<field name="seats"/>        
					<field name="active"/>       
					<field name="attendee_ids"/> 
                    <field name="taken_seats" widget="progressbar"/>
				</tree>
			</field>
		</record>

		<!-- ini definisi form session -->
		<record id="session_form" model="ir.ui.view">
			<field name="name">session_form</field>
			<field name="model">academic.session</field>
			
			<field name="arch" type="xml">
				<form string="Session Form" version="7.0">
					<header>
						<!--button string="Confirm" type="object" name="action_confirm"
						 	 states="draft" />
						<button string="Mark as Done" type="object" name="action_done"
						 	 states="confirmed" />
						<button string="Reset to Draft" type="object" name="action_draft" 
						 	 states="confirmed,done" /-->
						<button string="Confirm" type="workflow"
			                 name="signal_confirm"
                             groups="academic.group_manager"
							 states="draft" />
						<button string="Mark as Done" type="workflow"
                			 name="signal_done" 
                             groups="academic.group_manager"
                			 states="confirmed" />
						<button string="Reset to draft" type="workflow"
							 name="signal_draft" 
                             groups="academic.group_manager"
							 states="confirmed,done" />

						 <field name="state" widget="statusbar" />					
					</header>

					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" 
								 string="Session Name" />
							<h1>
								<field name="name" />
							</h1>
						</div>

						<group>
							<group>
								<field name="course_id"/>    
								<field name="instructor_id" 
								 domain="['|', ('is_instructor','=',True),('category_id', '=', 'Pelatih' )]"
								/>
                                <field name="start_date"/>  
								<field name="image_small" 
                                    widget="image" 
                                    class="oe_left oe_avatar" />  
							</group>
							<group> 
								<field name="duration"/>     
								<field name="seats" on_change="onchange_seats(seats, attendee_ids)"/>        
								<field name="active"/>   
		                       <field name="taken_seats" widget="progressbar"/>
							</group>
						</group>

						<notebook>
							<page string="Attendees">
								<field name="attendee_ids"> 
									<tree string="Attendee">
										<field name="name"/>
										<field name="partner_id"/>
									</tree>
								</field>
							</page>							
						</notebook>


					</sheet>
				</form>

			</field>
		</record>

		<!-- ini definisi calendar session -->
		<record id="session_calendar" model="ir.ui.view">
            <field name="name">session.calendar</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
            	<calendar string="Session" 
            		 date_start="start_date" 
            		 color="course_id">
            		<field name="name" />
            	</calendar>
            </field>		
		</record>


		<!-- ini definisi search session -->
        <record id="view_session_filter" model="ir.ui.view">
            <field name="name">session.filter</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <search string="Search Sessions">

                    <filter icon="terp-mail-message-new" 
                        string="Non zero duration" 
                    	 name="nonzero" domain="[('duration','>',0)]"/>
                    <separator/>
                    
                    <field name="instructor_id"/>
                    <field name="name"/>
                    
                    <group expand="1" string="Group By...">
                        <filter string="Course" icon="terp-personal" 
                            domain="[]" 
                        	 context="{'group_by':'course_id'}"/>
                        <filter string="Start Date" 
                            icon="terp-personal" domain="[]" 
                        	 context="{'group_by':'start_date'}"/>

                    </group>                                        

                </search>
            </field>
        </record>


        <!-- gantt -->
        <record id="view_session_gantt" model="ir.ui.view">
            <field name="name">session.filter</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <gantt date_delay="duration" 
                	 date_start="start_date" string="Session"
                	 default_group_by="course_id">
                </gantt>
            </field>
        </record>        

        <!-- graph -->
        <record id="view_session_graph" model="ir.ui.view">
            <field name="name">session.graph</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <graph string="Session" type="bar">
                    <field name="instructor_id"/>
                    <field name="seats" operator="+"/>
                </graph>
            </field>
        </record>

        <!-- session kanban -->
        <record id="view_session_kanban" model="ir.ui.view" >
            <field name="name">session.kanban</field>
            <field name="model">academic.session</field>
            <field name="arch" type="xml">
                <kanban version="7.0" default_group_by="course_id">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette">
                                <a type="open">
                                	<img 
                                    t-att-src="kanban_image('academic.session', 
                                    'image_small', record.id.value)"
                                    class="oe_kanban_image"/>
                                </a>
                                
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                        	Seats: <field name="seats"></field>
                                        </li>
                                        <li>
                                        	Taken Seats: <field name="taken_seats"></field>
                                    	</li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

	</data>
</openerp>
