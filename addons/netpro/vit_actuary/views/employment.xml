<openerp>
<data>        
    <record model="ir.ui.view" id="view_netpro_employment_form">
        <field name="name">netpro.employment.form</field>
        <field name="model">netpro.employment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="netpro.employment">
                <group>
                    <field name="name" select="1"/>
                    <field name="code" select="2"/>
                    <field name="description" select="2"/>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_netpro_employment_tree">
        <field name="name">netpro.employment.tree</field>
        <field name="model">netpro.employment</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="netpro.employment">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_netpro_employment">
        <field name="name">Employment</field>
        <field name="res_model">netpro.employment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</data>
</openerp>