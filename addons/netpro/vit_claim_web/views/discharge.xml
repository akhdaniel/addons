<openerp>
<data>
<!-- LO Confirmation -->

<template id="vit_claim_web.loc">
	<h2>Letter of Confirmation</h2>  

	<h3>Benefit <t t-esc="member_plan.plan_schedule_id.product_plan_base_id.name"/> - <t t-esc="member_plan.plan_schedule_id.product_plan_base_id.pplan"/> </h3>

	<form t-attf-action="/claim/discharge_process" method="post" class="form-horizontal mt32" enctype="multipart/form-data">

        <t t-foreach="member_plan.member_plan_detail_ids" t-as="plan">
         	<div class="row">
            	<div class="col-md-4 col-sm-4">
                    <label class="control-label"><t t-esc="plan.benefit_id.name"/></label>
                </div>
                <div class="col-md-4 col-sm-4">
                   	<t t-esc="plan.reim"/>
                </div>
            </div> 	
        </t>
     	
        <div class="row">
            <div class="col-sm-8 col-md-7">
                <button type="submit" name="confirm" class="btn btn-primary">
                    Confirm
                </button>
                <button type="submit" name="email"  class="btn btn-warning">
                    Email
                </button>
                <button type="submit" name="print"  class="btn btn-danger">
                    Print
                </button>
            </div>
        </div> 

	</form>
</template>

<!-- discharge -->

<template id="vit_claim_web.discharge_confirmation" name="Discharge Confirmation" page="True">
    <t t-call="website.layout">
        <t t-set="title">Discharge Confirmation</t>
        <div class="container">
        	<h1>Patient Name: <t t-esc="member.name"/></h1>
            
            <t t-call="vit_claim_web.patient_data">
                <t t-set="member" t-value="member"/>
            </t>    
            <t t-call="vit_claim_web.loc">
                <t t-set="member" t-value="member"/>
            </t>    


        </div>
        <br/>
    </t>	
</template>
</data>
</openerp>