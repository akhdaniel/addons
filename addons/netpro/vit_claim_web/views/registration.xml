<!-- Eligibility -->

<template id="vit_claim_web.eligibility" name="Claim Eligibility" page="True">
    <t t-call="website.layout">
        <t t-set="title">Eligibility</t>
        <div class="container">
        	<t t-call="vit_claim_web.patient_data"/>	

            <div class="col-sm-12 col-md-12">
		        <t t-foreach="member.policy_id.coverage_ids" t-as="cov">
                    <!-- /claim/loa/<member>/<product_type> -->
                    <a t-attf-href="/claim/loa/{{ slug(member) }}/{{ slug(cov.product_type_id) }}">
	                    <button class="btn btn-primary" t-attf-id="cov.product_type_id.name">
	                    	<t t-esc="cov.product_type_id.name" />
	                    </button>
                    </a>
                </t>
            </div>

        </div>
        <br/>
    </t>	
</template>

