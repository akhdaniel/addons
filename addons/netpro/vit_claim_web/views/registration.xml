<openerp>
<data>


<!-- LOA -->

<template id="vit_claim_web.loa">
    <t t-call="website.layout">
        <t t-set="title">Eligibility</t>
        <div class="container">

        	<h2>Letter of Authorization</h2>

            <t t-call="vit_claim_web.patient_data">
                <t t-set="member" t-value="member"/>
            </t>    

        	<h3>Benefit <t t-esc="product_type.name"/> - <t t-esc="product_type.description"/> </h3>

            <form t-attf-action="/claim/registration_process" method="post" class="form-horizontal mt32" enctype="multipart/form-data">

                <t t-foreach="member_plan_detail_ids" t-as="plan">

                 	<div class="row">
                    	<div class="col-md-4 col-sm-4">
                            <label class="control-label">B. Admin</label>
                        </div>
                        <div class="col-md-4 col-sm-4">
                           	Sesuai Tagihan
                        </div>
                    </div> 	
                </t>
             	
                <div class="row">
                    <div class="col-sm-8 col-md-7">
                        <button type="submit" name="confirm" class="btn btn-primary">
                            Confirm
                        </button>
                        <button type="submit" name="email"  class="btn btn-warning">
                            Email
                        </button>
                        <button type="submit" name="print"  class="btn btn-danger">
                            Print
                        </button>
                    </div>
                </div>    
            </form>
        </div>
    </t>
</template>

<!-- Eligibility -->

<template id="vit_claim_web.eligibility" name="Claim Eligibility" page="True">
    <t t-call="website.layout">
        <t t-set="title">Eligibility</t>
        <div class="container">
        	<t t-call="vit_claim_web.patient_data"/>	

            <div class="col-sm-12 col-md-12">
		        <t t-foreach="member.class_id.membership_plan_employee_ids" t-as="cov">
                    <!-- /claim/loa/<member>/<product_type> -->
                    <a t-attf-href="/claim/loa/{{ slug(member) }}/{{ slug(cov.product_plan_id) }}">
	                    <button class="btn btn-primary" t-attf-id="cov.product_plan_id.name">
	                    	<t t-esc="cov.product_plan_id.name" />
	                    </button>
                    </a>
                </t>
            </div>

        </div>
        <br/>
    </t>	
</template>

</data>
</openerp>