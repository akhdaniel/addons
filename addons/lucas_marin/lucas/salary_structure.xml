            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="sequence">13</field>
            <field name="amount_python_compute">result = result = (contract.type_id.jams1*(contract.wage + contract.jenis_tunjangan.tunj_makan + contract.jenis_tunjangan.tunj_jabatan))/100 if (contract.wage + contract.jenis_tunjangan.tunj_makan + contract.jenis_tunjangan.tunj_jabatan) >= 2356000 else (contract.type_id.jams1*2356000)/100</field>
            <field name="bonus">bonus_tetap</field>
        </record>

