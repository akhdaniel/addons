        <record id="hr_payroll_rules_lembur" model="hr.salary.rule">
            <field name="name">LEMBUR</field>
            <field name="code">LEMBUR</field>
            <field name="category_id" ref="hr_payroll.GROSS"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="sequence">12</field>
            <field name="amount_python_compute">result = (worked_days.LEMBUR.number_of_hours/173)*(contract.wage + contract.jenis_tunjangan.tunj_makan + contract.jenis_tunjangan.tunj_jabatan)</field>
