<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--
          Bill of Materials
        -->

        <record id="mrp_bom_form_view_ctype" model="ir.ui.view">
            <field name="name">mrp.bom.form.ctype</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_uom']" position="after">   
                    <field name="component_type"/>
                </xpath>
            </field>
        </record>


         <record id="mrp_bom_form_view_ctype2" model="ir.ui.view">
            <field name="name">mrp.bom.form.ctype2</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="yield"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
