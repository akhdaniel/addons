<openerp>
    <data>
                 
        <record id="hr_training_view_tree" model="ir.ui.view">
            <field name="name">hr_training.analisa.view.tree</field>
            <field name="model">hr_training.analisa</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Training">
                    <field name="department_id"/>
                    <field name="no"/>
                    <field name="subject_id"/>
                    <field name="tanggal"/> 
                    <field name="lama"/>  
                    <field name="is_internal"/>   
                    <field name="state"/>  
                </tree>
            </field>
        </record>
        
        <record id="hr_training2_view_tree" model="ir.ui.view">
            <field name="name">hr_training.train.view.tree</field>
            <field name="model">hr_training.train</field>
            <field name="type">tree</field>
            <field name="domain">[('state','=',approve)]</field>
            <field name="arch" type="xml">
                <tree string="Rencana Training">
                    <field name="employee_id"/>
                    <field name="subject"/> 
                    <field name="department_id"/>                                                            
                    <field name="job_id"/> 
                    <field name="penyelenggara"/>  
                </tree>
            </field>
        </record>
        
         <record id="hr_training_view_form" model="ir.ui.view">
            <field name="name">hr_training.analisa.view.form</field>
            <field name="model">hr_training.analisa</field>
            <field name="type">form</field>
            <field name="arch" type="xml">                
                <form string="hr_training.analisa.analisa_id" version="7.0">     
                <header>                            
                    <button string="Send for Approval" type="workflow" 
                        states="draft" name="signal_verify"
                        groups="hrd_ppi.group_hr_department" 
                        class="oe_highlight" /> 

                    <button string="Approve" type="workflow"  
                        states="verify" name="signal_approve"
                        groups="hrd_ppi.group_hr_training_head"
                        class="oe_highlight"  />  

                    <button string="Cancel" type="workflow"  
                        groups="hrd_ppi.group_hr_training_head"
                        states="verify" name="signal_cancel"/>
                        
                    <button string="Reject" type="workflow"  
                        groups="hrd_ppi.group_hr_training_head"
                        states="verify,approve2" name="signal_reject"/>     
                    
                    <button string="Second Approve" type="workflow"  
                        states="approve" name="signal_approve_hr_department"
                        groups="hrd_ppi.group_hr_manager"
                        class="oe_highlight"  />  
                        
                    <button string="Reject" type="workflow"  
                        groups="hrd_ppi.group_hr_manager"
                        states="approve" name="signal_reject"/>                                               

                    <!--button string="Reject" type="workflow"  
                        groups="hrd_ppi.group_hr_manager"
                        states="approve2" name="signal_reject"/-->

                    <button string="Start Evaluation" type="workflow"  
                        groups="hrd_ppi.group_hr_training_head"
                        states="approve2" name="signal_evaluation" 
                        class="oe_highlight" /> 
                        
                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,approve,approve2,evaluation" attrs="{'invisible': [('state','=', 'reject')]}" class="oe_inline"/>
                </header>
                <group>
                <group >
                    <field name="is_internal" attrs="{'invisible': [('state','!=', 'draft')],'readonly': [('state','!=', 'draft')]}"/>
                    
                     <field name="paket_id" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                     <field name="bulan" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                </group>
                <group >
                    <field name="department_id" attrs="{'readonly': [('state','!=', 'draft')]}"/>                    
                </group>    
                </group>
                    <!--group string="Training Eksternal" attrs="{'invisible': [('is_internal','=', True)],'readonly': [('state','!=', 'draft')]}>
                    </group>
                    <group string="Training Internal" attrs="{'invisible': [('is_internal','=', False)]}">
                    </group-->
                <group>      
                    <separator string="Training Eksternal" attrs="{'invisible': [('is_internal','=', True)],'readonly': [('state','!=', 'draft')]}"/>
                    <separator string="Training Internal" attrs="{'invisible': [('is_internal','=', False)],'readonly': [('state','!=', 'draft')]}"/>    
                    <separator string="Rejected" colspan="2" attrs="{'invisible': [('state','!=', 'reject')]}"/>
                    <group> 
                    <field name="no"/>
                    <field name="subject_id" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                    <!--field name="subject"/-->
                    <field name="mgt_id" attrs="{'readonly': [('state','!=', 'draft')]}"/>                   
                    <field name="penyelenggara" attrs="{'invisible': [('is_internal','=', True)],'readonly': [('state','!=', 'draft')]}"/>
                    <field name="presentasi" attrs="{'invisible': [('is_internal','=', True)],'readonly': [('state','!=', 'draft')]}"/>
                    <field name="nama" attrs="{'invisible': [('is_internal','=', False)],'readonly': [('state','!=', 'draft')]}"/> 
                    <field name="tanggal" attrs="{'readonly': [('state','!=', 'draft')]}"/>                   
                    </group>
                    <group>                                                        
                    <div>
                        <label for="realisasi" class="oe_inline" />
                        <field name="is_edit" groups="hrd_ppi.group_hr_training_head" nolabel="1" />                       
                    </div> 
                    <field name="realisasi" attrs="{'invisible': [('state','=', 'draft')],'readonly':[('is_edit','=',True)]}" nolabel="1"/> 
                    <field name="lama" attrs="{'invisible': [('state','=', 'draft')],'readonly':[('is_edit','=',True)]}"/>
                    <field name="catatan" />
                    <field name="description" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                    </group>    
                </group>      
                         
                    <notebook colspan="4">
                          <page string="Karyawan" name="karyawan">
                            <field view_mode="tree,form" name="employee_ids" nolabel="1">
                                <tree>
                                    <field name="employee_id"/> 
                                    <field name="job_id"/>
                                    <!--field name="department_id"/--> 
                                    <field name="nonik"/>                                    
                                    <field name="evaluasi_id"/>
                                    <field name="rekomendasi_id"/> 
                                    <field name="bukti_ids"/> 
                                    <!--field name="email"/-->                                                       
                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_id"/>  
                                        <field name="state" invisible="1"/> 
                                        <field name="evaluasi_id" attrs="{'invisible': [('state','!=', 'approve2')]}"/> 
                                        <field name="rekomendasi_id" attrs="{'invisible': [('state','!=', 'approve2')]}"/> 
                                    </group>
                                    <group>    
                                    <field view_mode="form" name="bukti_ids" attrs="{'invisible':[('state','!=','approve2')]}">
                                        <form>     
                                            <field name="name"/>                                                           
                                        </form>
                                    </field>
                                    </group>        
                                </form>
                            </field>
                        </page>	
                    </notebook>

                </form>
            </field>
        </record>
        
        <record id="view_training_filter2" model="ir.ui.view">
            <field name="name">Training</field>
            <field name="model">hr_training.analisa</field>
            <field name="type">search</field>
            <!--field name="inherit_id" ref="hr.view_employee_filter"/-->
            <field name="arch" type="xml">
                <search string="Pelatihan">
                    <group expand="0" string="Group By...">
                        <filter string="Nama Training" icon="terp-personal" domain="[]" context="{'group_by':'subject_id'}"/>
                        <filter string="Department" icon="terp-personal" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Internal/Eksternal" icon="terp-personal+" domain="[]" context="{'group_by':'is_internal'}"/>
                        <filter string="Status" icon="terp-personal+" domain="[]" context="{'group_by':'state'}"/>
                        <!--filter string="Company" icon="terp-go-home" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/-->
                    </group>
                </search>
             </field>
         </record>
         
         <record id="view_training_filter3" model="ir.ui.view">
            <field name="name">Rencana Training</field>
            <field name="model">hr_training.train</field>
            <field name="type">search</field>
            <!--field name="inherit_id" ref="hr.view_employee_filter"/-->
            <field name="arch" type="xml">
                <search string="Rencana Pelatihan">
                    <group expand="0" string="Group By...">
                        <filter string="Nama Training" icon="terp-personal" domain="[]" context="{'group_by':'subject'}"/>
                        <filter string="Department" icon="terp-personal" domain="[]" context="{'group_by':'department_id'}"/>
                        <!--filter string="Status" icon="terp-personal+" domain="[]" context="{'group_by':'state'}"/-->
                        <!--filter string="Internal/Eksternal" icon="terp-personal+" domain="[]" context="{'group_by':'is_internal'}"/-->
                        <filter string="Karyawan" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'employee_id'}"/>
                        <!--filter string="Company" icon="terp-go-home" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/-->
                    </group>
                </search>
             </field>
         </record>
        
        <record id="hr_training_subject_view_form" model="ir.ui.view">
            <field name="name">hr_training.subject.view.form</field>
            <field name="model">hr_training.subject</field>
            <field name="type">form</field>
            <field name="arch" type="xml">                
                <form string="hr_training.subject"> 
                    <field name="name"/>
                    <field name="code"/>
                </form>
            </field>
        </record>
        
        <record id="hr_training_paket_view_form" model="ir.ui.view">
            <field name="name">hr_training.paket.view.form</field>
            <field name="model">hr_training.paket</field>
            <field name="type">form</field>
            <field name="arch" type="xml">                
                <form string="hr_training.subject"> 
                    <field name="name"/>
                    <field name="code"/>
                </form>
            </field>
        </record>
                
        <!--sequance-->
        <record forcecreate="1" id="seq_type_training" model="ir.sequence.type">
            <field name="name">Training</field>
            <field name="code">hr_training.analisa.nomor</field>
        </record>
        
        <record  forcecreate="1" id="seq_training" model="ir.sequence">
            <field name="name">Training</field>
            <field name="code">hr_training.analisa.nomor</field>
            <field name="prefix"></field>
            <field name="padding">3</field>
        </record>      
        
        <!--record forcecreate="1" id="seq_type_training_employees" model="ir.sequence.type">
            <field name="name">Training Participants</field>
            <field name="code">hr.employee</field>
        </record>
        
        <record  forcecreate="1" id="seq_training_employees" model="ir.sequence">
            <field name="name">Training Participants</field>
            <field name="code">hr.employee</field>
            <field name="prefix"></field>
            <field name="padding">3</field>
        </record-->   
        
    </data>
</openerp>
    
