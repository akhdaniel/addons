            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'hr.training_sio'" name="model" />
            <field eval="'schedule_iso'" name="function" />
            <field eval="'()'" name="args" />
            <field name="nextcall">"2014-06-9 17:00:00"</field>
