<openerp>
    <data>
      <record model="ir.ui.view" id="tab_training_view">
            <field name="name">employee.training</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml"> 
                <!--field name="name" position="after">
                    <field name="nik" placeholder="Nomor Induk Karyawan"/>
                </field-->
                <page string ="HR Settings" position="after">                      
                    <page string="Training" name="training">
                    <group colspan="2">
                        <field view_mode="tree,form" name="train_ids" nolabel="1" >
                            <tree>      
                                <field name="subject_id"/>                        
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="durasi"/>
                                <field name="penyelenggara"/>
                                <field view_mode="tree,form" name="bukti_ids" nolabel="1" >
                                    <tree>     
                                        <field name="name"/>                                                           
                                    </tree>
                                    <form>     
                                        <field name="name"/>                                                           
                                    </form>
                                </field>                                    
                            </tree>
                            <form>
                                <!--field name="analisa_id"/--> 
                            <group>    
                                <field name="subject_id"/>
                                <field name="penyelenggara"/>
                                <label for="durasi" string="Durasi" />
                                    <div >
                                        <field name="date_from" on_change="onchange_date_from(date_to, date_from)" class="oe_inline"/><field name="date_to" on_change="onchange_date_from(date_to, date_from)" class="oe_inline"/>
                                        <div>
                                            <field name="durasi" class="oe_inline"/> Hari
                                        </div>
                                    </div>   
                            </group>
                            <group>                                                                            
                                <field view_mode="tree,form" name="bukti_ids">
                                    <tree>     
                                        <field name="name"/>                                                           
                                    </tree>
                                    <form>     
                                        <field name="name"/>                                                           
                                    </form>
                                </field> 
                            </group>     
                            </form>
                        </field>

                            
                    </group>
                    </page>	
                </page>	        		                 	                                                                 
            </field>       
        </record>

    </data>
</openerp>
