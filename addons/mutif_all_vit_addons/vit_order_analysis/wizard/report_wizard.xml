<openerp>
	<data>
		<!-- wizard action -->
		<record model="ir.actions.act_window" id="run_report_wizard"> 
			<field name="name">Run Report</field>
			<field name="res_model">vit_order_analysis.report_wizard</field> 
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_classname_tree"/>
			<field name="context">{"search_default_category":1,"search_default_product":1,"search_default_partner":1}</field>		
			<field name="target">new</field> 
		</record>

		<!-- wizard form-->
        <record id="view_report_wizard_form" model="ir.ui.view">
            <field name="name">vit_order_analysis_report_wizard_form</field>
            <field name="model">vit_order_analysis.report_wizard</field>
            <field name="arch" type="xml">
            	<form string="report_wizard form" version="7.0">
            		<sheet>
		            	<group string="Select report date">
			                <field name="date_start"/>       
			                <field name="date_end"/>       
				        </group>
					</sheet>
					<footer>
						<button type="special" 
							 special="cancel" 
							 string="Cancel" 
							 icon="gtk-cancel"/>
						
						<button type="object" 
							 name="fill_table"
							 string="Run Report" 
							 icon="gtk-ok"
							 />				
					</footer>
			    </form>
            </field>
        </record>

        <!-- wizrd menu -->
	    <menuitem id="run_report" 
    	 parent="base.next_id_64" name="Run Order Analysis" sequence="50" 
    	 action="run_report_wizard" />


	</data>
</openerp>