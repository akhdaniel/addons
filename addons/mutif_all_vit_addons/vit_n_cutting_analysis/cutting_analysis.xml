		    <field name="model">vit_n_cutting_analysis.cutting_analysis</field>
		    <field name="arch" type="xml">
		    	<form string="Cutting Analysis" version="7.0">
		    		<sheet>
		    			<group>
			    			<group>
					    		<!-- <field name="model_forecast_type_id"/> 		 -->
								<field name="s_forcest"/> 	
