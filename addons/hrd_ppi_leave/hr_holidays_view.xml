<openerp>
    <data>
        
    	<!-- Public Holiday -->

		<record id="action_hr_public_holiday" model="ir.actions.act_window">
            <field name="name">Holidays</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="Holidays" parent="hr.menu_hr_root" id="menu_open_holidays" sequence="6" groups="base.group_hr_user,base.group_hr_manager"/>
        <menuitem  name="Calendar Event" id="menu_action_hr_public_holiday" parent="menu_open_holidays" sequence="1"
            action="action_hr_public_holiday"/>
            
        <!-- Public Holiday --> 
    	<record id="hr_public_holiday_form" model="ir.ui.view">
            <field name="name">Public Holidays</field>
            <field name="model">hr.holidays</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">
            	<field name="department_id" position="after">
					<field name="is_libur" attrs="{'invisible':[('holiday_type','=','employee')]}"/> (Libur Nasional)
            	</field>
            </field>
        </record>
        
        <record id="hr_public_holiday_tree" model="ir.ui.view">
            <field name="name">Public Holidays</field>
            <field name="model">hr.holidays</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
            	<tree colors="red:state == 'refuse';blue:state == 'draft';black:state in ('confirm','validate','validate1')" string="Holidays Summary">
            		<field name="name"/>
					<field name="date_from"/>
					<field name="date_to"/>
					<field name="number_of_days_temp"/>
					<!--field name="previous_holiday"/>
					<field name="next_holiday"/>
					<field name="country_id"/>
					<field name="rule_id"/-->
					<field name="state" invisible="1"/>
            	</tree>
            </field>
        </record>

		<record id="action_hr_public_holiday" model="ir.actions.act_window">
            <field name="name">Public Holidays</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_public_holiday_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_libur','=',True)]</field>
            <field name="help">You will find here the list of public holidays</field>
        </record>
        
         <record id="view_holiday_new_calendar1" model="ir.ui.view">
            <field name="name">Calendar Event</field>
            <field name="model">hr.holidays</field>
            <field name="arch" type="xml">
                <calendar string="Calendar Event" color="user_id" date_start="date_from" date_stop="date_to">
                    <field name="user_id"/>
                    <field name="holiday_status_id"/>
                </calendar>
            </field>
        </record>
        
       <record model="ir.actions.act_window.view" id="action_open_ask_holidays_calendar">
            <field name="sequence" eval="1"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="view_holiday_new_calendar1"/>
            <field name="act_window_id" ref="action_hr_public_holiday"/>
        </record>
        
        </data>
</openerp>
   
   