        <!-- Public Holiday --> 
    	<record id="hr_public_holiday_form" model="ir.ui.view">
            <field name="name">Public Holidays</field>
            <field name="model">hr.holidays</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">
                <header position="replace">
                <header>
                    <button string="Approve" name="validate" states="confirm" type="workflow" groups="base.group_hr_manager" class="oe_highlight"/>
                    <button string="Validate" name="second_validate" states="validate1" type="workflow" groups="base.group_hr_manager" class="oe_highlight"/>
                    <button string="Refuse" name="refuse" states="confirm,validate1,validate" type="workflow" groups="base.group_hr_manager"/>
                    <button string="Reset to New" name="set_to_draft" states="refuse" type="object" groups="base.group_hr_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate" statusbar_colors='{"confirm":"blue","validate1":"blue","refuse":"red"}'/>
                </header>
                </header>
                <field name="date_from" nolabel="1" on_change="onchange_date_from(date_to, date_from)" required="1" class="oe_inline" position="replace">
                    <field name="date_from" nolabel="1" on_change="onchange_date_from2(date_to, date_from,libur_bersih)" required="1" class="oe_inline"/>
                </field> 
                <field name="date_to" nolabel="1" on_change="onchange_date_to(date_to, date_from)" required="1" class="oe_inline" position="replace">
                    <field name="date_to" nolabel="1" on_change="onchange_date_to2(date_to, date_from,libur_bersih)" required="1" class="oe_inline"/>
                </field>
                <field name="department_id" position="after">
                    <field name="libur_bersih"/>
                </field>                     
            </field>
        </record>
        <record model="ir.ui.view" id="hr_public_holiday_form9">
            <field name="name">PublicHolidays</field>
            <field name="model">hr.bln_libur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Libur">
                    <notebook colspan="4">
                            <page string="Tanggal Libur">
                                <field view_mode="tree" name="hol_ids" nolabel="1">
                                	<tree editable="bottom">
                                		<field name="name"/>
                                		<field name="holiday_status_id"/>
					                    <field name="date_from" nolabel="1" on_change="onchange_date_from(date_to, date_from)" required="1"/>
                                        <field name="date_to" nolabel="1" on_change="onchange_date_to(date_to, date_from)"/>
					                    <field name="number_of_days_temp"/>
					                    <field name="holiday_type" on_change="onchange_type(holiday_type)"/>
                                        <field name="category_id" attrs="{'required':[('holiday_type','=','category')], 'invisible':[('holiday_type','=','employee')]}"/>
                                        <field name="state"/>
                                	</tree>
                                </field>
                            </page>
                    </notebook> 
            </form>               
            </field>
        </record>
        
        <record id="hr_public_holiday_tree" model="ir.ui.view">
            <field name="name">Public Holidays</field>
            <field name="model">hr.holidays</field>
            <field name="type">tree</field>
            <field name="domain">[('holiday_type','=','category')]</field>
            <field name="arch" type="xml">
            	<tree colors="red:state == 'refuse';blue:state == 'draft';black:state in ('confirm','validate','validate1')" string="Hari Libur Nasional">
            		<field name="name"/>
            		<field name="holiday_status_id"/>
					<field name="date_from" nolabel="1" on_change="onchange_date_from(date_to, date_from)" required="1"/>
                    <field name="date_to" nolabel="1" on_change="onchange_date_to(date_to, date_from)"/>
					<field name="number_of_days_temp"/>
					<field name="state" />
            	</tree>
            </field>
        </record>

