<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_split_in_lots_custom" model="ir.ui.view">
            <field name="name">Split in Serial Numbers Inherit</field>
            <field name="model">stock.move.split</field>
            <field name="inherit_id" ref="stock.view_split_in_lots"/>
            <field name="arch" type="xml">
                <xpath expr="/form/field[@name='line_ids']/tree/field[@name='name']" position="after">
                    <field name="expire" on_change="onchange_expire(name,expire)"/>
                </xpath>
            </field>
        </record>

        <record id="stock_partial_picking_form_custom" model="ir.ui.view">
            <field name="name">vit - Add on expire Inherit</field>
            <field name="model">stock.partial.picking</field>
            <field name="inherit_id" ref="stock.stock_partial_picking_form"/>
            <field name="arch" type="xml">
                <field name="prodlot_id" position="replace">
                    <field name="prodlot_id" on_change="onchange_prodlot_id(prodlot_id)" domain="[('product_id', '=', product_id)]" invisible="context.get('hide_tracking',False)" attrs="{'required':[('quantity', '!=', 0)]}" groups="stock.group_production_lot" context="{'default_product_id':product_id}"/>
                    <field name="expired" invisible="context.get('hide_tracking',False)" attrs="{'required':[('tracking','=',True), ('quantity', '!=', 0)]}" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>

        <record id="view_production_lot_tree_custom" model="ir.ui.view">
            <field name="name">stock production lot tree Inherit</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="after">
                    <field name="life_date"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>