<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_saleorderlist_document">
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                     <strong t-if="o.partner_id">Customer:</strong>
                    <div t-field="o.partner_id" 
                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p> 
                                         
                </div>                                  
            </div>

            <h3>
                <span >Order List NÂ° : </span>
                <span t-field="o.name"/>
            </h3>

            <div class="row mt32 mb32" id="informations">
<!--                 <div t-if="o.ref" class="col-xs-3">
                    <strong>Reference:</strong>
                    <p t-field="o.ref"/>
                </div>
                                       
 -->
                    <div t-if="o.purchase_date" class="col-xs-3">
                        <strong>P.O Date:</strong>
                        <p t-field="o.purchase_date"/>                    
                    </div>
                    <div t-if="o.up_to_date" class="col-xs-3">
                        <strong>Up to date:</strong>
                        <p t-field="o.up_to_date"/>  
                    </div>    
                    <div t-if="o.delivery_date" class="col-xs-3">
                        <strong>Delivery Date:</strong>
                        <p t-field="o.delivery_date"/> 
                    </div>      
                    <div t-if="o.user_id.name" class="col-xs-3">
                        <strong>User:</strong>
                        <p t-field="o.user_id.name"/>
                    </div>
                                             
            </div>


            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Order Ref</th>
                        <th>Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th class="text-right">Sub Total</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <tr t-foreach="o.sale_order_line_ids" t-as="l">
                        <td>
                           <span t-field="l.order_id"/>
                        </td>
                        <td>
                            <span t-field="l.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                            <span t-field="l.product_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal"
                                t-field-options='{"display_currency": "o.pricelist_id.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>             
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.total"
                                    t-field-options='{"display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.note" />
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_saleorderlist">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'vit_order_list.report_saleorderlist_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
