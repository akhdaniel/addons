<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<template id="report_so_invoice">
			<!-- <link rel="stylesheet" href="/vit_product/static/src/css/xxcss.css"/> -->
		    <!-- <t t-call="report.html_container"> -->
		        <t t-foreach="docs" t-as="o">
		            <!-- <t t-call="report.external_layout"> -->
			            <div class="page">
				            <div style="float: right;">
		                        <table>
		                            <tr style="width: 100%;">
		                            	<td style="width: 30%;"/>
		                            	<td style="width: 20%;"/>
		                                <td colspan='2' class="text-center" style="
				                        	border-width: 1px;
		  									border-style: solid;
		  									border-color: grey;
		  									width: 40%;">
						                    <h4 t-if="o.state in ['draft','sent']">Draft Pro Forma Invoice</h4>
						                    <h4 t-if="o.state  == 'progress'">Sales Order</h4>
						                    <h4 t-if="o.state  == 'cancel'">Sales Order Canceled</h4>
		                                	</td>
		                            </tr>
		                            <tr>
		                            	<td/>
		                            	<td class="text-center" style="
				                        	border-width: 1px;
		  									border-style: solid;
		  									border-color: grey;">
		  									<p>Remarks:<br/><span t-field="o.comment"/></p></td>
		                                <td style="
  											padding: 4px 8px 4px 8px;
				                        	border-right: 0px;
		  									border-style: solid;
		  									border-color: grey;
		  									width: 15%;">
						                    <span t-if="o.state in ['draft','sent']">Proforma Invoice N° :<br/><br/></span>
						                    <span t-if="o.state  == 'progress'">Sales Order N° :<br/><br/></span>
						                    <span>Date :<br/><br/></span>
						                    <span>Remarks :</span></td>
					                	<td style="
  											padding: 4px 8px 4px 8px;
				                        	border-right: 1px solid;
				                        	border-left: 0px;
				                        	border-botom: 1px solid;
				                        	border-top: 1px solid;
		  									border-style: solid;
		  									border-color: grey;
		  									width: 15%;">
		  									<span t-if="o.state in ['draft','sent']" t-field="o.proforma_no"/>
						                	<span t-if="o.state  == 'progress'" t-field="o.name"/><br/><br/>
						                	<span t-field="o.date_order"/><br/><br/>
						                	<span t-field="o.desc_goods"/></td>
		                            </tr>
		                        </table>
			                    
			                    <div class="oe_structure"/>
					            
			                    <!-- <div t-field="o.partner_id" t-field-options="{&quot;no_marker&quot;: true}"/> -->
				            </div>
				            <p class="oe_clear"/>
				            <div class="oe_structure"/>
	                       
	                    </div>
		        	<!-- </t> -->
	            </t>
		    <!-- </t> -->
		</template>

        <report
		    id="so_proforma_invoice"
		    model="sale.order"
		    string="Proforma Invoice"
		    report_type="qweb-pdf"
		    name="vit_product.report_so_invoice"
		    file="vit_product.report_so_invoice"
		/>
		
	</data>
</openerp>