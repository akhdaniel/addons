<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
         <template id="layout_inherit" inherit_id="website.layout">
            <xpath expr="//html/head" position="inside">
                <link rel="stylesheet" href="/web_snippet_extra/static/src/css/custom.css"/> 
            </xpath> 
        </template>
        <template id="probuse_snippets" inherit_id="website.snippets">
            <xpath expr="//div[@class='scroll']/ul[@class='nav navbar-nav nav-tabs']" position="inside">
                <li><a href="#snippet_probuse" data-toggle="tab">Extra</a></li>
            </xpath>
            
            <xpath expr="//div[@id='snippet_effect']" position="after">
                <div id="snippet_probuse" class="tab-pane">
                    <!--Section for Auto slider snippet-->
                    <div>
                        <div class="oe_snippet_thumbnail">
                            <img class="oe_snippet_thumbnail_img" src="/web_snippet_extra/static/src/img/slider_icon.png"/>
                            <span class="oe_snippet_thumbnail_title">Image Slider</span>
                        </div>
                        <div id="carousel-example-generic" class="oe_snippet_body carousel slide mb16" style="height: 320px;">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active" style="background-image: url('/web_snippet_extra/static/src/img/slider_image_01.jpg')">
                                    <div class="carousel-caption">
                                        <div class="container">
                                                <div class="carousel-img img-rounded col-md-6 img_hidden col-sm-12 pull-right" style="background:#E0E0E0;" contenteditable="true" >
                                                    <h3 class="text-left" style="padding-left:5%;padding-top:10%;"><b>A GREAT PLACE TO RECEIVE EXPERIENCE</b></h3>
                                                    <div class="text-left" style="padding-left:5%;color:black;">
                                                        <b>
                                                            <p>
                                                                Our main goal is to focus on quality
                                                            </p>
                                                            <p>
                                                                and customer satisfaction
                                                            </p>
                                                            <p>
                                                                 which help our customers manage
                                                            </p>
                                                            <p>
                                                                their operations effectively.
                                                            </p>
                                                        </b>
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="item" style="background-image: url('/web_snippet_extra/static/src/img/slider_image_02.jpg')">
                                    <div class="carousel-caption">
                                        <div class="container">
                                            <div class="row content" >
                                                <div class="carousel-img img-rounded col-md-6 img_hidden col-sm-12 pull-right" style="background:#E0E0E0;" contenteditable="true" >
                                                    <h3 class="text-left" style="padding-left:5%;padding-top:10%;"><b>CREATIVE IDEAS WITH SIMPLE SOLUTIONS</b></h3>
                                                    <div class="text-left" style="padding-left:5%;color:black;">
                                                        <b>
                                                            <p>Our goal is to offer a </p>
                                                            <p>
                                                                100% success by providing effective solutions
                                                            </p>
                                                            <p>
                                                                to meet our customers needs.
                                                            </p>
                                                        </b>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="item" style="background-image: url('/web_snippet_extra/static/src/img/slider_image_03.jpg')">
                                    <div class="carousel-caption">
                                        <div class="container">
                                            <div class="row content" >
                                                <div class="carousel-img img-rounded col-md-6 img_hidden col-sm-12 pull-right" style="background:#E0E0E0;" contenteditable="true" >
                                                    <h3 class="text-left" style="padding-left:5%;padding-top:10%;"><b>PROVIDING AN EXCEPTIONAL SERVICES</b></h3>
                                                    <div class="text-left" style="padding-left:5%;color:black;">
                                                        <b>
                                                            <p>We offer you Odoo (formerly OpenERP) services</p>
                                                            <p> of world largest open source busniess management applications</p>
                                                            <p> and integrated ERP System.</p>
                                                        </b>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!--Section for parallel blocks snippet-->
                    <div>
                        <div class="oe_snippet_thumbnail">
                            <img class="oe_snippet_thumbnail_img" src="/web_snippet_extra/static/src/img/FSkfV.png"/>
                            <span class="oe_snippet_thumbnail_title">Parallel Blocks</span>
                        </div>
                        <section class="oe_snippet_body mt16 mb16">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4 img-rounded" style="background-image: url('/web_snippet_extra/static/src/img/fst_693qfhqhbz2_crop.jpg')">
                                        <h4 class="mt16 text-center block-title"><b>ODOO IMPLEMENTATION &amp; SUPPORT</b></h4>
                                        <p class="text-center">
                                            Probuse can give service to partners or directly customers who wants to implement Odoo and we provide functional and technical support to our customers and consultancy for business process mapping and analyse.
                                        </p>
                                    </div>
                                    <div class="col-md-4 img-rounded"  style="background-image: url('/web_snippet_extra/static/src/img/block_3.jpg')">
                                        <h4 class="mt16 text-center block-title"><b>ODOO CUSTOMIZATION &amp; MIGRATION</b></h4>
                                        <p class="text-center">
                                            Probuse provides all kind of customization like workflow, report design, wizard, views, website design. Probuse can make module migration from different levels of Odoo versions.
                                        </p>
                                    </div>
                                    <div class="col-md-4 img-rounded" style="background-image: url('/web_snippet_extra/static/src/img/back_cr.jpg')">
                                        <h4 class="mt16 text-center block-title"><b>ODOO TRAINING'S &amp; IMPLEMENTATION ASSISTANCE</b></h4>
                                        <p class="text-center">
                                            We provide functional and technical training's of Odoo (Onsite and Online) and we help you to implement Odoo to your customer premises..
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    
                </div>
            </xpath>
        </template>
        <template id="show_sign_in_theme" customize_show="True" inherit_id="website.show_sign_in" name="Show Sign In" groups="base.group_public">
            <xpath expr="//a[@t-attf-href='/web/login']/b" position="replace">
                         <img style="max-width:50px; margin-top: -7px;" height="40px" width="40px"
                     src="/web_snippet_extra/static/src/img/login.png"/> 
            </xpath>
        </template>
    </data>
</openerp>