<openerp>
	<data>

		<!-- tree rka_detail -->
		<record id="view_rka_detail_tree" model="ir.ui.view">
		    <field name="name">anggaran_rka_detail_tree</field>
		    <field name="model">anggaran.rka_detail</field>
		    <field name="arch" type="xml">
		    	<tree string="list rka_detail" >
					<field name='unit_id' invisible="1"/>
					<field name='kebijakan_id'  invisible="1"/>
					<field name='program_id'  invisible="1"/>
					<field name='kegiatan_id'  invisible="1"/>

					<field name='rka_coa_id' />
					<field name='keterangan' />
					<field name='tarif'	/>
					<field name='jumlah' />		
					<field name='volume_total' />
		        </tree>    
		    </field>
		</record>

		<!-- search rka_detail -->
		<record id="view_rka_detail_filter" model="ir.ui.view">
		    <field name="name">rka_detail.filter</field>
		    <field name="model">anggaran.rka_detail</field>
		    <field name="arch" type="xml">
		        <search string="Search rka_detail">
					<field name='unit_id' />
					<field name='kebijakan_id' />
					<field name='program_id' />
					<field name='kegiatan_id' />
					<field name='rka_coa_id' />
					<field name='keterangan' />
					<field name='volume_total' />

		            <group expand="1" string="Group By...">

		                <filter string="Kebijakan" icon="terp-personal" 
		                    domain="[]"  name="group_by_kebijakan_id"
		                	 context="{'group_by':'kebijakan_id'}"/>

		                <filter string="Program" icon="terp-personal" 
		                    domain="[]"  name="group_by_program_id"
		                	 context="{'group_by':'program_id'}"/>

		                <filter string="Kegiatan" icon="terp-personal" 
		                    domain="[]"  name="group_by_kegiatan_id"
		                	 context="{'group_by':'kegiatan_id'}"/>

		                <filter string="MAK" icon="terp-personal" 
		                    domain="[]"  name="group_by_rka_coa_id"
		                	 context="{'group_by':'rka_coa_id'}"/>

		                <filter string="Unit" icon="terp-personal" 
		                    domain="[]"  name="group_by_unit_id"
		                	 context="{'group_by':'unit_id'}"/>

		                <filter string="Tahun" icon="terp-personal" 
		                    domain="[]"  name="group_by_tahun"
		                	 context="{'group_by':'tahun'}"/>

		                <filter string="Period" icon="terp-personal" 
		                    domain="[]"  name="group_by_period_id"
		                	 context="{'group_by':'period_id'}"/>

		            </group>                                        
		
		        </search>
		    </field>
		</record>


		<!-- action list rka detail -->
		<record id="action_rka_detail_list" model="ir.actions.act_window">
			<field name="name">Rencana Operasional dan Anggaran Detail</field>
			<field name="res_model">anggaran.rka_detail</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'search_default_group_by_unit_id': 1,
				'search_default_group_by_tahun': 1,
				'search_default_group_by_period_id': 1,
				'search_default_group_by_kebijakan_id': 1,
				'search_default_group_by_program_id': 1,
				'search_default_group_by_kegiatan_id': 1,
				'search_default_group_by_rka_coa_id': 1}</field>
		</record>

		<!-- action list pkk -->
		<record id="action_pkk_list" model="ir.actions.act_window">
			<field name="name">Pencapaian Kinerja Kegiatan</field>
			<field name="res_model">anggaran.lap_pkk</field>
			<field name="view_mode">tree,graph</field>
		</record>


		<!-- action list pdana -->
		<record id="action_pdana_list" model="ir.actions.act_window">
			<field name="name">Penggunaan Dana</field>
			<field name="res_model">anggaran.lap_pdana</field>
			<field name="view_mode">tree,graph</field>
		</record>


		<!--  menu_anggaran_laporan -->
		<menuitem id="menu_anggaran_laporan"
			 name="Laporan"
			 sequence="150"
			 parent="anggaran.menu_anggaran"/>

		<!-- menu_pkk -->
		<menuitem id="menu_pkk"
			 action="action_pkk_list"
			 name="Pencapaian Kinerja Kegiatan"
			 sequence="20"
			 parent="menu_anggaran_laporan"/>
		<!-- menu_pdana -->
		<menuitem id="menu_pdana"
			 action="action_pdana_list"
			 name="Penggunaan Dana"
			 sequence="30"
			 parent="menu_anggaran_laporan"/>

		<!-- menu_rka -->
		<menuitem id="menu_rka_detail"
			 action="action_rka_detail_list"
			 name="ROA Detail"
			 sequence="20"
			 parent="menu_anggaran_anggaran"/>

 
	</data>
</openerp>