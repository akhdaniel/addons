<openerp>
    <data>
      <record model="ir.ui.view" id="tab_training_view">
            <field name="name">employee.training</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml"> 
                <field name="name" position="after">
                    <field name="nik" placeholder="Nomor Induk Karyawan"/>
                </field>
                    <page string ="HR Settings" position="after">                      
                        <page string="Training" name="training">
                            <field view_mode="tree,form" name="training_ids" nolabel="1">
                                <tree>                               
                                    <field name="nama"/>
                                    <field name="lama"/>
                                    <field name="instansi"/>
                                    <field name="tanggal"/>
                                    <field name="bukti"/>                                    
                                </tree>
                                <form>
                                    <field name="nama"/>
                                    <field name="lama"/>
                                    <field name="instansi"/>
                                    <field name="tanggal"/>
                                    <field name="bukti"/>   
                                </form>
                            </field>
                        </page>	
                    </page>	        		                 	                                                                 
            </field>       
        </record>

    </data>
</openerp>
