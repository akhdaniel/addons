<openerp>
    <data>
        <record model="ir.ui.view" id="tab_form_view">
            <field name="name">employe</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                   <page string="Personal Information" position="replace">                    
                         <page string="Personal Information" groups="base.group_hr_user">
                                    <group string="Citizenship &amp; Other Info">
                                        <group >
                                        <field name="kelamin"/>
                                        <field name="blood"/>
                                        <field name="bahasa2_id"/>
                                        <field name='country_id'/>
                                        <field name="bank_account_id"/>
                                        </group>
                                        <group string="ID Card">
                                        <field name="jenis_id"/>

                                        <field name='ktp' attrs="{'invisible':[('jenis_id','!=','KTP')]}"/>
                                        <field name='dikeluarkan' attrs="{'invisible':[('jenis_id','!=','KTP')]}"/>
                                        <!--field name='tgl_keluar_ktp' attrs="{'invisible':[('jenis_id','!=','KTP')]}"/-->
                                        <field name='tgl_berlaku' attrs="{'invisible':[('jenis_id','!=','KTP')]}"/>
                                        <!--field name='sim'/-->
                                        <field name='tgl_keluar_sim' attrs="{'invisible':[('jenis_id','!=','SIM')]}"/>  
                                        <field name='tgl_keluar_sima' attrs="{'invisible':[('jenis_id','!=','SIM_A')]}"/> 
                                        <field name='tgl_keluar_simc' attrs="{'invisible':[('jenis_id','!=','SIM_C')]}"/>        
                                        <field name="no_pass" attrs="{'invisible':[('jenis_id','!=','Passport')]}"/>
                                        <field name="no_rek" attrs="{'invisible':[('jenis_id','!=','Rek.Bank')]}"/> 
                                        <field name="no_sim" attrs="{'invisible':['|',('jenis_id','!=','SIM')]}"/>    
                                        <field name="no_sim" attrs="{'invisible':['|',('jenis_id','!=','SIM_A')]}"/>
                                        <field name="no_sim" attrs="{'invisible':['|',('jenis_id','!=','SIM_C')]}"/>          
                                        </group> 
                                    </group>
                                    <group>
                                    <group string="Contact Information">
                                        <field name='alamat1' placeholder="Alamat di Jakarta"/>
                                        <field name="kota_id" placeholder="Kota di Jakarta"/>
                                        <field name="kodepos" placeholder="Kode Pos di Jakarta"/>
                                        <field name='telp1' placeholder="Telp. di Jakarta"/>
                                        <field name='alamat2' placeholder="Alamat Luar Jakarta"/>
                                        <field name="kota_id" placeholder="Kota di Luar Jakarta"/>
                                        <field name="kodepos" placeholder="Zip"/>                         
                                        <field name='telp2' placeholder="Telp. di Luar Jakarta"/>
                                        <field name="country_id2"/>
                                        <field name="address_home_id" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True}' placeholder="From Employee"/>
                                    </group>
                                    <group>
                                    <group string="Status">
                                        <field name='agama'/>
                                        <field name='marital'/>
                                        <field name='sjk_tanggal' attrs="{'invisible':[('marital','=','single')]}"/>                                                                           
                                    <group string="Birth">
                                        <field name='birthday'/>
                                        <field name="kota_id"/>
									</group>	
                                    </group>
                                    </group>
                                    </group>
                                </page>         
                    </page>
                    <page string ="HR Settings" position="after">                   
                                <page string="Susunan Keluarga Istri/Suami" name="Susunan Keluarga Istri/Suami">
                                    <field view_mode="tree,form" name='susunan_kel1_ids' nolabel="1" >
                                        <tree>
                                            <field name="name"/>
                                            <field name="jenis_kel"/>
                                            <field name="tmp_lahir"/>
                                            <field name='tgl_lahir'/>
                                            <field name='pendidikan'/>
                                            <field name='pekerjaan'/>
                                        </tree>
                                        <form>
                                            <field name="name"/>
                                            <field name="jenis_kel"/>
                                            <field name="tmp_lahir"/>
                                            <field name='tgl_lahir'/>
                                            <field name='pendidikan'/>
                                            <field name='pekerjaan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>
                    <page string ="Susunan Keluarga Istri/Suami" position="after">                   
                                <page string="Susunan Keluarga Ayah/Ibu" name="Susunan Keluarga Ayah/Ibu">
                                    <field view_mode="tree,form" name='susunan_kel2_ids' nolabel="1" >
                                        <tree>
                                            <field name='susunan'/>
                                            <field name="name"/>
                                            <field name="jenis_kel"/>
                                            <field name="tmp_lahir"/>
                                            <field name='tgl_lahir'/>
                                            <field name='pendidikan'/>
                                            <field name='pekerjaan'/>
                                        </tree>
                                        <form>
                                            <field name='susunan'/>
                                            <field name="name"/>
                                            <field name="jenis_kel"/>
                                            <field name="tmp_lahir"/>
                                            <field name='tgl_lahir'/>
                                            <field name='pendidikan'/>
                                            <field name='pekerjaan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>  
                    <page string ="Susunan Keluarga Istri/Suami" position="after">                   
                                <page string="Riwayat Pendidikan" name="Riwayat Pendidikan">
                                    <field view_mode="tree,form" name='rwt_pend_ids' nolabel="1" >
                                        <tree>
                                            <field name='name'/>
                                            <field name='jurusan'/>
                                            <field name='tempat'/>
                                            <field name='tahun'/>
                                            <field name='ijazah'/>
                                        </tree>
                                        <form>
                                            <field name='name'/>
                                            <field name='jurusan'/>
                                            <field name='tempat'/>
                                            <field name='tahun'/>
                                            <field name='ijazah'/>
                                        </form>
                                    </field>
                                </page>
                    </page>   
                    <page string ="Riwayat Pendidikan" position="after">                   
                                <page string="Bahasa">
                                    <field view_mode="tree,form" name='bahasa_ids' nolabel="1" >
                                        <tree>
                                            <field name='name'/>
                                            <field name='tulis'/>
                                            <field name='lisan'/>
                                        </tree>
                                        <form>
                                            <field name='name'/>
                                            <field name='tulis'/>
                                            <field name='lisan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>                 
                    <page string ="Bahasa" position="after">                   
                                <page string="Riwayat Pekerjaan">
                                    <field view_mode="tree,form" name='rwt_krj_ids' nolabel="1" >
                                        <tree>
                                            <field name='no'/>
                                            <field name='name'/>
                                            <field name='tahun'/>
                                            <field name='jabatan'/>
                                            <field name='gaji'/>
                                            <field name='alasan'/>
                                        </tree>
                                        <form>
                                            <field name='no'/>
                                            <field name='name'/>
                                            <field name='tahun'/>
                                            <field name='jabatan'/>
                                            <field name='gaji'/>
                                            <field name='alasan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>
                    <page string ="Riwayat Pekerjaan" position="after">                   
                                <page string="Koneksi Internal">
                                    <field view_mode="tree,form" name='koneksi1_ids' nolabel="1" >
                                        <tree>
                                            <field name='employee_id'/>
                                            <field name='alamat'/>
                                            <field name='jabatan'/>
                                        </tree>
                                        <form>
                                             <field name='employee_id'/>
                                            <field name='alamat'/>
                                            <field name='jabatan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>            
                    <page string ="Koneksi Internal" position="after">                   
                                <page string="Koneksi Eksternal">
                                    <field view_mode="tree,form" name='koneksi2_ids' nolabel="1" >
                                        <tree>
                                            <field name='name'/>
                                            <field name='alamat'/>
                                            <field name='jabatan'/>
                                        </tree>
                                        <form>
                                             <field name='name'/>
                                            <field name='alamat'/>
                                            <field name='jabatan'/>
                                        </form>
                                    </field>
                                </page>
                    </page>                                            
             </field>                                                   
        </record>
    </data>
</openerp>
