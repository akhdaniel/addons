<openerp>
    <data>
      <record id="view_hr_job_form2" model="ir.ui.view">
            <field name="name">hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">

                <header>                              
                    <button string="Submit to HRD" type="workflow" 
                        states="draft" name="signal_submit"
                        groups="hrd_ppi.group_hr_department,hrd_ppi.group_hr_manager" 
                        class="oe_highlight" />                 
                                             
                    <button string="Send for Approval" type="workflow" 
                        states="submit" name="signal_verify"
                        groups="hrd_ppi.group_hr_user" 
                        class="oe_highlight" />

					<button string="Cancel" type="workflow"  
                        groups="hrd_ppi.group_hr_user"
                        states="submit" name="signal_cancel"/>

                    <button string="Approve" type="workflow"  
                        states="verify" name="signal_approve"
                        groups="hrd_ppi.group_hr_manager"
                        class="oe_highlight"  />  

                    <button string="Cancel" type="workflow"  
                        groups="hrd_ppi.group_hr_manager"
                        states="verify" name="signal_cancel"/>                                                             

                    <button string="Stop Recruitment" type="workflow"  
                        groups="hrd_ppi.group_hr_manager"
                        states="in_progress" name="signal_stop_recruit" 
                        class="oe_highlight" />

                    <field name="state" widget="statusbar"/>

                </header> 
                <label for="name" position="before">
                    <group>
                    <!--field name="no"/-->
                    <field name="jenis_permohonan"/>
                    </group>
                    <group>
                </group>
                </label> 
                <field name="name" position="before">
                    <field name="bol_name" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager" nolabel="1" class="oe_inline"/>   
                </field> 
                <field name="no_of_employee" position="before">
                    <field name="status_jabatan" /> 

                    <div>
                        <field name="bol_pengalaman" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="pengalaman" class="oe_inline" />
                    </div>
                    <field name="pengalaman" class="oe_inline"  nolabel="1"/>

                    <div>
                        <field name="bol_usia" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="usia" class="oe_inline" />
                    </div>
                    <field name="usia" nolabel="1"/>

                    <div>
                        <field name="bol_kelamin" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="kelamin" class="oe_inline" />
                    </div>  
                    <field name="kelamin" nolabel="1"/>

                    <div>
                        <field name="bol_sts_prk" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="sts_prk" class="oe_inline" />
                    </div>
                    <field name="sts_prk" nolabel="1"/> 

                    <div>
                        <field name="bol_domisili" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="domisili_id" class="oe_inline" />
                    </div>
                    <field name="domisili_id" nolabel="1"/>

                    <div>
                        <field name="bol_tempat_lahir_id" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="tempat_lahir_id" class="oe_inline" />
                    </div>
                    <field name="tempat_lahir_id" nolabel="1"/> 

                </field>
				
                <field name="department_id" position="after">                                        
                    <label for="wkt_pemohon" string="Waktu Penempatan"/>
                        <div class="oe_title">
                            <label for="wkt_pemohon"/>
                            <field name="wkt_pemohon" />
                            <label for="wkt_rekruter" attrs="{'invisible':[('state','!=','in_progress')]}"/>
                            <field name="wkt_rekruter" attrs="{'invisible':[('state','!=','in_progress')]}"/>                   
                        </div>                    
                    <field name="catatan" attrs="{'invisible':[('state','!=','in_progress')]}"/>

                    <div>
                        <field name="bol_type_id" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="type_id" class="oe_inline" />
                    </div>
                    <field name="type_id" nolabel="1"/>

                    <div>
                        <field name="bol_jurusan_ids" nolabel="1" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager"/>
                        <label for="jurusan_ids" class="oe_inline" />
                    </div>
                    <field view_mode="tree" name="jurusan_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>    
                    </field> 

                    <field view_mode="tree" name="survey_ids">
                        <tree>
                            <field name='surveys_id'/>
                        </tree>
                        <form>
                            <field name='surveys_id'/>
                        </form>
                    </field>   
	            </field>
				<field name="requirements" position="replace">
                    <div>
                    <label for="catatan2"/>
                    <field name="catatan2"/>
                    </div>             
                    <button string="Filter" type="object" 
                        states="in_progress" name="cici"
                        groups="hrd_ppi.group_hr_manager" 
                        class="oe_highlight" attrs="{'invisible':[('bol_name','=',True)]}"/> 
                    <button string="Execute" type="object" 
                        states="in_progress" name="execute"
                        groups="hrd_ppi.group_hr_manager" 
                        class="oe_highlight" attrs="{'invisible':[('bol_name','=',True)]}"/>     
                <notebook colspan="4">                      
                        <page string="Daftar Pelamar" name="Pelamar" attrs="{'invisible':[('state','!=','in_progress')]}" groups="hrd_ppi.group_hr_manager" >
                            <field view_mode="tree,form" name="applicant_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_name"/>
                                    <field name="job_id"/>                                    
                                    <field name="age"/>
                                    <field name="kelamin"/>
                                    <field name="status"/> 
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>    
                 </notebook>  
                </field>             	                                                                            
            </field>      
        </record>
    
    </data>
</openerp>
